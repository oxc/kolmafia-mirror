<project name="KoLmafia" default="debug" basedir=".">

	<!-- ========================================== -->
	<!--  set the global properties for this build  -->
	<!-- ========================================== -->

	<property name="debug" value="true"/>

	<property name="root" location="."/>
	<property name="src" location="src"/>
	<property name="lib" location="lib"/>
	<property name="build" location="build"/>
	<property name="dist" location="dist"/>
	<property name="docs" location="${dist}/docs"/>

	<property name="jarfile" location="${dist}/${ant.project.name}.jar"/>
	<property name="tarfile" location="${dist}/${ant.project.name}.tar.gz"/>
	<property name="main-class" value="net.sourceforge.kolmafia.KoLmafia"/>


	<!-- ========================================== -->
	<!--  create directories used by other targets  -->
	<!-- ========================================== -->

	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
		<mkdir dir="${dist}"/>
	</target>


	<!-- ======================= -->
	<!--  clean up object files  -->
	<!-- ======================= -->

	<target name="clean">

		<delete dir="${build}"/>
		<delete dir="${docs}"/>
		<delete file="${jarfile}"/>
		<delete file="${tarfile}"/>

	</target>


	<!-- ============================= -->
	<!--  generate the executable JAR  -->
	<!-- ============================= -->

	<target name="createjar" depends="init">

		<javac source="1.4" srcdir="${src}" destdir="${build}" classpath="${lib}/*.jar"
			debug="${debug}" debuglevel="lines,vars,source" deprecation="on"/>

		<copy todir="${build}" preservelastmodified="true">
			<fileset dir="${src}">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>

		<copy todir="${build}" preservelastmodified="true">
			<fileset dir="${lib}"/>
		</copy>

		<jar destfile="${jarfile}" basedir="${build}" update="true" index="yes">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>

	</target>


	<!-- ============================ -->
	<!--  generate the debugging JAR  -->
	<!-- ============================ -->

	<target name="debug" depends="clean,createjar"/>


	<!-- ============================= -->
	<!--  regenerate the standard JAR  -->
	<!-- ============================= -->

	<target name="rejar" depends="clean">

		<antcall target="createjar">
			<param name="debug" value="false"/>
		</antcall>

	</target>


	<!-- =========================== -->
	<!--  generate the distribution  -->
	<!-- =========================== -->

	<target name="dist" depends="rejar">

		<tar destfile="${tarfile}" basedir="${root}" compression="gzip">
			<exclude name="CVS/**"/>
			<exclude name="build/**"/>
			<exclude name="dist/**"/>
			<exclude name="www/data/**"/>
		</tar>

	</target>


	<!-- ==================================================== -->
	<!--  runs program with all needed libraries in the path  -->
	<!-- ==================================================== -->

	<target name="exec" depends="createjar">
		<java fork="true" jar="${jarfile}" dir="${dist}"/>
	</target>


	<!-- ======================================= -->
	<!--  generate the javadocs from sourcecode  -->
	<!-- ======================================= -->

	<target name="javadoc" depends="init">

		<mkdir dir="${docs}"/>
		<mkdir dir="${docs}/api"/>

		<javadoc sourcepath="${src}" destdir="${docs}" packagenames="*">
			<link href="http://java.sun.com/j2se/1.4.2/docs/api/"/>

			<classpath>
				<pathelement location="${lib}"/>
				<pathelement location="${build}"/>
			</classpath>

		</javadoc>

	</target>

</project>
